

<h1>DASHBOARD</h1>
<h3>Welcome {{name}} </h3>
<p>Here are your Proverbs</p>
{{#if posts}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
                <tr>
                    <td><a href="/posts/{{_id}}">{{title}}</a></td>
                    <td>{{ formatDate createdAt 'MMMM Do YYYY, h:mm:ss a' }}</td>
                    <td>  <span class="dash-status"> {{status}} </span></td>
                    <td>
                        <a href="/posts/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit"></i></a>

                        <form action="/posts/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not written any proverbs</p>
{{/if}}