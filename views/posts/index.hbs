<h1>Proverbs</h1>
<div class="row">
    {{#each posts}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id }}}
                </div>
                <div class="card-content center-align">
                    <h5> {{title}} </h5>
                    <p> {{ stripTags (truncate body 150)}} </p>
                    <br/>
                    <div class="chip">
                        <a href="/posts/user/{{user._id}}">{{user.email}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                     <a href="/posts/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No Proverbs To Display</p>
    {{/each}}
</div>